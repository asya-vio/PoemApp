<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anastasia.poemapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AppBase.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PoemActivity"
            android:label="@string/title_activity_poem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.AuthorActivity"
            android:label="@string/title_activity_author"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.BaseNavigateActivity"
            android:label="@string/title_activity_base_navigate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.Author2Activity"></activity>
    </application>

</manifest>